{
  "name": "monitoring",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "eslint-report": "eslint . --format html -o report.html",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "echo no tests for this project",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.2.13-1",
    "@types/aws-lambda": "8.10.108",
    "aws-cdk-lib": "2.62.2",
    "constructs": "10.1.235"
  },
  "devDependencies": {
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@types/node": "^18.13.0",
    "esbuild": "^0.15.15",
    "jest": "^29.3.1",
    "parallelshell": "3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  },
  "externals": [
    "aws-sdk"
  ]
}
