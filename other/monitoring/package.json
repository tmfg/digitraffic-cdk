{
  "name": "monitoring",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node12",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "test": "echo no tests for this project",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@aws-cdk/assert": "*",
    "@types/node": "^14.14.27",
    "esbuild": "^0.8.36",
    "parallelshell": "3.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-events": "*",
    "@aws-cdk/aws-cloudwatch": "*",
    "@aws-cdk/aws-cloudwatch-actions": "*",
    "@aws-cdk/aws-iam": "*",
    "@aws-cdk/aws-kinesis": "*",
    "@aws-cdk/aws-lambda": "*",
    "@aws-cdk/aws-lambda-event-sources": "*",
    "@aws-cdk/aws-logs": "*",
    "@aws-cdk/aws-logs-destinations": "*",
    "@aws-cdk/aws-sns": "*",
    "@aws-cdk/aws-sns-subscriptions": "*",
    "@aws-cdk/aws-ssm": "*",
    "@aws-cdk/aws-rds": "*",
    "@aws-cdk/core": "*",
    "@types/aws-lambda": "*",
    "aws-lambda": "^1.0.6"
  },
  "externals": [
    "aws-sdk"
  ]
}
