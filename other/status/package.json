{
  "name": "status-cdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node14",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node14",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint --cache .",
    "eslint-report": "eslint . --format html -o report.html",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.2.3",
    "@types/node": "*",
    "@types/sinon": "*",
    "esbuild": "^0.15.15",
    "jest": "^29.3.1",
    "parallelshell": "3.0.2",
    "querystring": "0.2.1",
    "sinon": "*",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "@types/paho-mqtt": "^1.0.4",
    "aws-cdk-lib": "2.51.1",
    "aws-sdk": "2.1260.0",
    "axios": "^1.2.0",
    "constructs": "10.1.168",
    "paho-mqtt": "^1.1.0",
    "source-map-support": "^0.5.19",
    "ws": "^8.11.0"
  },
  "externals": [
    "aws-sdk"
  ]
}
