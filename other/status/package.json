{
  "name": "status-cdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run build:bundle",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --format=esm --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node20",
    "cdk": "npx cdk@latest",
    "cdk-bootstrap-status-prod": "../../scripts/cdk-bootstrap.sh status-prod",
    "cdk-deploy-status-prod": "../../scripts/cdk-diff-and-deploy.sh status-prod deploy StatusStack",
    "cdk-diff-status-prod": "../../scripts/cdk-diff-and-deploy.sh status-prod diff StatusStack",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-canaries": "echo no canaries",
    "compile-canaries_": "esbuild src/canaries/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node18",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/lambda --target=node20 --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" --out-extension:.js=.mjs",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean && npm run build:bundle",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.529.1",
    "@digitraffic/common": "2024.3.11-1",
    "aws-cdk-lib": "~2.132.0",
    "axios": "~1.6.7",
    "constructs": "~10.3.0",
    "date-fns": "~2.30.0",
    "lodash": "~4.17.21",
    "mqtt": "~5.3.6",
    "ws": "~8.16.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "~29.7.0",
    "@rushstack/eslint-config": "~3.6.4",
    "@rushstack/heft": "~0.66.0",
    "@rushstack/heft-jest-plugin": "~0.11.21",
    "@types/aws-lambda": "8.10.136",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.14.202",
    "@types/node": "20.11.25",
    "date-fns-tz": "~2.0.1",
    "esbuild": "~0.20.1",
    "eslint": "~8.57.0",
    "typescript": "~5.4.2"
  }
}
