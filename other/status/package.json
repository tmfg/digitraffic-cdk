{
  "name": "status-cdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"pnpm run watch\" \"pnpm run bundle-watch\"",
    "build": "tsc && pnpm postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-bootstrap-status-prod": "../../scripts/cdk-bootstrap.sh status-prod",
    "cdk-deploy-status-prod": "../../scripts/cdk-diff-and-deploy.sh status-prod deploy StatusStack",
    "cdk-diff-status-prod": "../../scripts/cdk-diff-and-deploy.sh status-prod diff StatusStack",
    "ci:eslint-report": "eslint . --format html -o report.html",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "aws-cdk-lib": "2.51.1",
    "aws-sdk": "2.1260.0",
    "axios": "^1.2.0",
    "constructs": "10.1.168",
    "mqtt": "^4.3.7",
    "source-map-support": "^0.5.19",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "~3.2.0",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.2.3",
    "@types/node": "*",
    "@types/sinon": "*",
    "esbuild": "^0.15.15",
    "eslint": "~8.35.0",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "parallelshell": "3.0.2",
    "sinon": "*",
    "ts-node": "^10.9.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.0"
  },
  "externals": [
    "aws-sdk"
  ]
}
