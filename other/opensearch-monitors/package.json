{
  "name": "opensearch-monitors",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "build:bundle": "npm run compile-lambdas",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-lambdas": "esbuild src/lambda/*.ts --bundle --platform=node --outdir=dist/lambda --target=node20 --log-level=error",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean"
  },
  "dependencies": {
    "@aws-crypto/sha256-browser": "5.2.0",
    "@aws-sdk/client-sts": "3.502.0",
    "@aws-sdk/types": "3.485.0",
    "@digitraffic/common": "2024.1.24-3",
    "@smithy/node-http-handler": "2.2.2",
    "@smithy/protocol-http": "3.0.12",
    "@smithy/signature-v4": "2.0.19",
    "aws-cdk": "^2.118.0",
    "aws-cdk-lib": "~2.118.0",
    "aws-sdk": "~2.1531.0",
    "constructs": "10.3.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.6.1",
    "@rushstack/heft": "^0.66.1",
    "@rushstack/heft-jest-plugin": "^0.11.2",
    "@types/heft-jest": "1.0.6",
    "@types/node": "20.10.7",
    "esbuild": "0.19.11",
    "parallelshell": "3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
