{
  "name": "opensearch-monitors",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run build:bundle",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "cdk": "cdk",
    "cdk-deploy-status-prod": "rushx build && ../../scripts/cdk-diff-and-deploy.sh status-prod deploy UpdateOSMonitorsProd",
    "cdk-diff-status-prod": "rushx build && ../../scripts/cdk-diff-and-deploy.sh status-prod diff UpdateOSMonitorsProd",
    "compile-canaries": "echo 'No canaries'",
    "compile-canaries_": "esbuild src/canaries/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node22,es2020",
    "compile-lambdas": "node lib/esbuild.js",
    "compile-lambdas-old": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/lambda --target=node22,es2022 --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" --out-extension:.js=.mjs",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean && npm run build:bundle",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft test-watch --clean"
  },
  "dependencies": {
    "@aws-crypto/sha256-browser": "5.2.0",
    "@aws-sdk/client-sts": "3.975.0",
    "@aws-sdk/types": "3.973.1",
    "@digitraffic/common": "2026.2.5-2",
    "@smithy/node-http-handler": "4.4.8",
    "@smithy/protocol-http": "5.3.8",
    "@smithy/signature-v4": "5.3.8",
    "aws-cdk-lib": "2.236.0",
    "constructs": "10.4.5"
  },
  "devDependencies": {
    "@digitraffic-cdk/cdk-rig": "workspace:*",
    "@digitraffic-cdk/esbuild": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/heft": "1.1.10",
    "@rushstack/heft-jest-plugin": "1.1.10",
    "@types/heft-jest": "1.0.6",
    "@types/node": "25.0.10",
    "aws-cdk": "2.1103.0",
    "esbuild": "0.27.2",
    "typescript": "5.9.3"
  }
}
