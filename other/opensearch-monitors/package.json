{
  "name": "opensearch-monitors",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "cdk": "pnpm dlx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-lambdas": "esbuild lib/lambda/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "echo no tests for this project",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@aws-crypto/sha256-browser": "4.0.0",
    "@aws-sdk/node-http-handler": "3.360.0",
    "@aws-sdk/protocol-http": "3.357.0",
    "@aws-sdk/signature-v4": "3.357.0",
    "@aws-sdk/types": "3.357.0",
    "@digitraffic/common": "2023.4.28-1",
    "aws-cdk": "^2.85.0",
    "aws-cdk-lib": "~2.85.0",
    "aws-sdk": "~2.1405.0",
    "constructs": "10.2.61"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.3.2",
    "@types/node": "~18.15.11",
    "esbuild": "0.18.10",
    "parallelshell": "3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "~4.9.5"
  }
}
