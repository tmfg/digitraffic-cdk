{
  "name": "opensearch-monitors",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas -- --log-level=warning",
    "cdk": "pnpm dlx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-lambdas": "esbuild lib/lambda/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "echo no tests for this project",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@aws-crypto/sha256-browser": "5.2.0",
    "@aws-sdk/node-http-handler": "3.374.0",
    "@aws-sdk/protocol-http": "3.374.0",
    "@aws-sdk/signature-v4": "3.374.0",
    "@aws-sdk/types": "3.433.0",
    "@digitraffic/common": "2023.4.28-1",
    "aws-cdk": "^2.103.1",
    "aws-cdk-lib": "~2.103.1",
    "aws-sdk": "~2.1482.0",
    "constructs": "10.3.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.4.1",
    "@types/node": "20.8.9",
    "esbuild": "0.19.5",
    "parallelshell": "3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  }
}
