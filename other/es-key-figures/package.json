{
  "name": "es-key-figures",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean || npm run postbuild",
    "postbuild": "esbuild src/lambda/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "heft test --clean",
    "watch": "heft build --clean --watch"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "aws-cdk-lib": "~2.76.0",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "~2.1362.0",
    "axios": "^1.3.6",
    "constructs": "10.2.2",
    "mysql": "^2.18.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.2.0",
    "@rushstack/heft": "^0.50.0",
    "@rushstack/heft-jest-plugin": "^0.5.6",
    "@types/aws-lambda": "~8.10.114",
    "@types/heft-jest": "~1.0.3",
    "@types/jest": "^29.5.1",
    "@types/mysql": "^2.15.15",
    "@types/node": "18.15.13",
    "@types/sinon": "10.0.14",
    "esbuild": "0.17.17",
    "eslint": "~8.38.0",
    "jest": "^29.5.0",
    "nock": "~13.3.1",
    "node-mocks-http": "~1.12.2",
    "parallelshell": "3.0.2",
    "sinon": "15.0.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "externals": [
    "aws-sdk"
  ]
}
