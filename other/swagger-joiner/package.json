{
  "name": "swagger-joiner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf tsd",
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node12",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node12",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint lib/**/*.ts test/**/*.ts --fix",
    "test": "jest --detectOpenHandles",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.75",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.27",
    "@types/sinon": "^10.0.0",
    "aws-cdk": "1.117.0",
    "esbuild": "^0.8.36",
    "jest": "^27.0.6",
    "jest-junit": "^12.0.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-events": "1.117.0",
    "@aws-cdk/aws-events-targets": "1.117.0",
    "@aws-cdk/aws-iam": "1.117.0",
    "@aws-cdk/aws-lambda": "1.117.0",
    "@aws-cdk/aws-logs": "1.117.0",
    "@aws-cdk/aws-s3": "1.117.0",
    "@aws-cdk/core": "1.117.0",
    "@types/ramda": "0.27.44",
    "aws-sdk": "^2.821.0",
    "axios": "^0.21.1",
    "ramda": "0.27.1",
    "source-map-support": "^0.5.19"
  },
  "externals": [
    "aws-sdk"
  ]
}
