{
  "name": "swagger-joiner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "npx cdk@latest",
    "cdk-deploy-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-deploy-rail-prod": "../../scripts/cdk-diff-and-deploy.sh rail-prod deploy SwaggerJoinerRailProd",
    "cdk-deploy-rail-test": "../../scripts/cdk-diff-and-deploy.sh rail-test deploy SwaggerJoinerRailBeta",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy",
    "cdk-diff-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "cdk-diff-rail-prod": "../../scripts/cdk-diff-and-deploy.sh rail-prod diff SwaggerJoinerRailProd",
    "cdk-diff-rail-test": "../../scripts/cdk-diff-and-deploy.sh rail-test diff SwaggerJoinerRailBeta",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.9.14-1",
    "aws-cdk-lib": "~2.85.0",
    "aws-sdk": "~2.1405.0",
    "axios": "^1.4.0",
    "constructs": "10.2.61",
    "ramda": "~0.29.0",
    "source-map-support": "^0.5.21",
    "zod": "3.22.3"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.3.2",
    "@types/aws-lambda": "~8.10.119",
    "@types/jest": "^29.5.2",
    "@types/node": "18.15.13",
    "@types/ramda": "~0.29.0",
    "@types/sinon": "10.0.15",
    "esbuild": "0.18.10",
    "eslint": "~8.43.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "sinon": "15.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "types-ramda": "~0.29.1",
    "typescript": "~4.9.5"
  },
  "externals": [
    "aws-sdk"
  ]
}
