{
  "name": "swagger-joiner",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run build:bundle",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --format=esm --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node20,es2022",
    "cdk": "npx cdk@latest",
    "cdk-deploy-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-deploy-rail-prod": "../../scripts/cdk-diff-and-deploy.sh rail-prod deploy SwaggerJoinerRailProd",
    "cdk-deploy-rail-test": "../../scripts/cdk-diff-and-deploy.sh rail-test deploy SwaggerJoinerRailBeta",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy",
    "cdk-diff-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "cdk-diff-rail-prod": "../../scripts/cdk-diff-and-deploy.sh rail-prod diff SwaggerJoinerRailProd",
    "cdk-diff-rail-test": "../../scripts/cdk-diff-and-deploy.sh rail-test diff SwaggerJoinerRailBeta",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "echo 'No canaries'",
    "compile-canaries_": "esbuild src/canaries/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node18,es2020",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/lambda --target=node20,es2022  --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" --out-extension:.js=.mjs",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean && npm run build:bundle",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft test-watch --clean"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "3.600.0",
    "@aws-sdk/client-s3": "~3.600.0",
    "@digitraffic/common": "2024.6.26-2",
    "aws-cdk-lib": "~2.147.1",
    "constructs": "~10.3.0",
    "ky": "^1.3.0",
    "lodash": "~4.17.21",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "~29.7.0",
    "@rushstack/eslint-config": "^3.7.0",
    "@rushstack/heft": "^0.66.18",
    "@rushstack/heft-jest-plugin": "^0.12.0",
    "@types/aws-lambda": "8.10.140",
    "@types/heft-jest": "1.0.6",
    "@types/lodash": "4.17.5",
    "@types/node": "20.14.8",
    "esbuild": "0.21.5",
    "eslint": "^8.57.0",
    "typescript": "~5.5.2"
  }
}
