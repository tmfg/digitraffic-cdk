{
  "name": "aton-faults",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node22",
    "cdk": "npx cdk@latest",
    "cdk-deploy-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-diff-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node22",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node22",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean",
    "test_errors": "rushx test 2>&1 | grep 'FAIL'"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.896.0",
    "@date-fns/tz": "1.4.1",
    "@digitraffic/common": "2025.9.26-1",
    "@middy/core": "6.4.5",
    "@middy/sqs-partial-batch-failure": "6.4.5",
    "@turf/turf": "7.2.0",
    "aws-cdk-lib": "^2.217.0",
    "constructs": "10.4.2",
    "date-fns": "4.1.0",
    "ky": "^1.11.0",
    "parse-link-header": "^2.0.0",
    "pg-native": "^3.5.2",
    "pg-promise": "^12.1.3",
    "spex": "^3.4.1",
    "undici": "^7.15.0",
    "uuid": "^11.1.0",
    "wkx": "^0.5.0",
    "xml2js": "^0.6.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "^30.2.0",
    "@rushstack/heft": "^0.74.2",
    "@rushstack/heft-jest-plugin": "^0.16.11",
    "@types/aws-lambda": "8.10.152",
    "@types/geojson": "7946.0.16",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.6",
    "@types/uuid": "10.0.0",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.25.10",
    "parallelshell": "^3.0.2",
    "typescript": "^5.9.2",
    "xsd-schema-validator": "^0.11.0"
  }
}
