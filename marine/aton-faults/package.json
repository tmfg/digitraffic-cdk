{
  "name": "aton-faults-cdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node12",
    "compile-canaries": "esbuild lib/canaries/*.ts --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node12",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node12",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint lib/**/*.ts test/**/*.ts --fix",
    "test": "jest --detectOpenHandles --forceExit --coverage --coverageDirectory=output/coverage/jest",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@aws-cdk/assert": "*",
    "@types/aws-lambda": "*",
    "@types/jest": "^26.0.22",
    "@types/node": "*",,
    "@types/sinon": "^10.0.0",
    "@types/xml2js": "^0.4.8",
    "@types/xsd-schema-validator": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "esbuild": "^0.8.36",
    "eslint": "^7.13.0",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "parallelshell": "3.0.1",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "*",
    "xsd-schema-validator": "^0.7.0"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "*",
    "@aws-cdk/aws-ec2": "*",
    "@aws-cdk/aws-events-targets": "*",
    "@aws-cdk/aws-lambda": "*",
    "@aws-cdk/aws-sns": "*",
    "@aws-cdk/aws-sns-subscriptions": "*",
    "@aws-cdk/core": "*",
    "@turf/turf": "6.5.0",
    "@turf/boolean-intersects": "6.5.0",
    "@types/geojson": "^7946.0.7",
    "aws-sdk": "*",
    "axios": "^0.21.1",
    "digitraffic-common": "*",
    "moment": "*",
    "moment-timezone": "*",
    "parse-link-header": "^1.0.1",
    "pg-native": "*",
    "pg-promise": "*",
    "source-map-support": "^0.5.19",
    "wkx": "^0.5.0",
    "xml2js": "^0.4.23"
  },
  "externals": [
    "aws-sdk"
  ]
}
