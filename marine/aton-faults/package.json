{
  "name": "aton-faults",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node20",
    "cdk": "npx cdk@latest",
    "cdk-deploy-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-diff-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node18",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node20",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean",
    "test_errors": "rushx test 2>&1 | grep 'FAIL'"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "3.600.0",
    "@digitraffic/common": "2024.6.26-2",
    "@middy/core": "^5.4.2",
    "@middy/sqs-partial-batch-failure": "^5.4.2",
    "@turf/turf": "7.0.0-alpha.116",
    "aws-cdk-lib": "~2.147.1",
    "constructs": "10.3.0",
    "date-fns": "~3.6.0",
    "date-fns-tz": "~3.1.3",
    "ky": "^1.3.0",
    "parse-link-header": "^2.0.0",
    "pg-native": "^3.1.0",
    "pg-promise": "^11.8.0",
    "spex": "^3.3.0",
    "undici": "^6.19.2",
    "uuid": "^10.0.0",
    "wkx": "^0.5.0",
    "xml2js": "^0.6.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "29.7.0",
    "@rushstack/eslint-config": "^3.7.0",
    "@rushstack/heft": "^0.66.18",
    "@rushstack/heft-jest-plugin": "^0.12.0",
    "@types/aws-lambda": "8.10.140",
    "@types/geojson": "^7946.0.13",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.8",
    "@types/uuid": "10.0.0",
    "@types/xml2js": "0.4.14",
    "@types/xsd-schema-validator": "0.5.7",
    "esbuild": "0.21.5",
    "eslint": "^8.57.0",
    "parallelshell": "3.0.2",
    "typescript": "~5.5.2",
    "xsd-schema-validator": "^0.9.0"
  }
}
