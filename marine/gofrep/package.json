{
  "name": "gofrep",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node22",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean"
  },
  "dependencies": {
    "@digitraffic/common": "2025.6.27-2",
    "aws-cdk-lib": "^2.202.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "~10.4.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "^30.0.3",
    "@rushstack/eslint-config": "^3.7.1",
    "@rushstack/heft": "^0.74.0",
    "@rushstack/heft-jest-plugin": "^0.16.9",
    "@types/aws-lambda": "8.10.150",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "22.15.2",
    "@types/sinon": "17.0.4",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.25.5",
    "eslint": "^8.57.0",
    "jest": "^30.0.3",
    "jest-junit": "^16.0.0",
    "parallelshell": "^3.0.2",
    "sinon": "21.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3"
  }
}
