{
  "name": "portactivity",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild lib/canaries/*.ts --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node16",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "eslint-report": "eslint . --format html -o report.html",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles",
    "test_errors": "pnpm test 2>&1 | grep 'FAIL'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.03.10-1",
    "@middy/core": "^3.6.2",
    "@middy/sqs-partial-batch-failure": "^3.6.2",
    "@types/amqplib": "^0.10.0",
    "@types/ramda": "0.28.20",
    "@types/ws": "^8.2.0",
    "amqplib": "^0.10.3",
    "aws-cdk-lib": "2.62.2",
    "aws-sdk": "2.1304.0",
    "axios": "^1.2.0",
    "constructs": "10.1.235",
    "date-fns": "^2.29.3",
    "moment": "*",
    "moment-timezone": "0.5.39",
    "pg-native": "*",
    "pg-promise": "10.15.2",
    "ramda": "0.28.0",
    "source-map-support": "^0.5.19",
    "spex": "^3.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@aws-cdk/aws-synthetics-alpha": "2.62.2-alpha.0",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.2.3",
    "@types/node": "*",
    "@types/sinon": "*",
    "@types/uuid": "^8.3.3",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "*",
    "esbuild": "^0.15.15",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "parallelshell": "3.0.2",
    "sinon": "*",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}
