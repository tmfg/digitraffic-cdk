{
  "name": "portactivity",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "npm run build:tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node20",
    "cdk": "cdk",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node20",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node20",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "heft test --clean",
    "test:watch": "heft test-watch --clean"
  },
  "dependencies": {
    "@digitraffic/common": "2024.1.10-1",
    "@middy/core": "^5.2.1",
    "@middy/sqs-partial-batch-failure": "^5.2.1",
    "amqplib": "^0.10.3",
    "aws-cdk-lib": "~2.118.0",
    "aws-sdk": "~2.1482.0",
    "axios": "^1.6.5",
    "constructs": "10.3.0",
    "date-fns": "~2.30.0",
    "lodash": "~4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "0.5.44",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.5.4",
    "spex": "^3.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.5.1",
    "@rushstack/heft": "^0.63.6",
    "@rushstack/heft-jest-plugin": "^0.10.8",
    "@types/amqplib": "0.10.4",
    "@types/aws-lambda": "8.10.131",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.11",
    "@types/lodash": "4.14.202",
    "@types/node": "20.10.7",
    "@types/sinon": "17.0.2",
    "@types/uuid": "9.0.7",
    "@types/ws": "8.5.10",
    "@types/xml2js": "0.4.14",
    "aws-sdk": "~2.1531.0",
    "esbuild": "0.19.11",
    "eslint": "~8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "sinon": "17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
