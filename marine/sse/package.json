{
  "name": "sse-sea-state-estimate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "prebuild": "json2ts -i lib/schemas/ -o lib/generated/",
    "build": "pnpm prebuild && tsc && pnpm postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-deploy-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-diff-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html",
    "clean": "rimraf dist cdk.out lib/generated",
    "clean:force": "rimraf dist cdk.out lib/generated node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "pretest": "json2ts -i lib/schemas/ -o lib/generated/",
    "test": "jest --detectOpenHandles --forceExit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "@middy/core": "^3.6.2",
    "@types/ramda": "0.28.20",
    "aws-cdk-lib": "2.51.1",
    "constructs": "10.1.168",
    "dtsgenerator": "^3.3.1",
    "moment": "*",
    "moment-timezone": "0.5.39",
    "pg-native": "*",
    "pg-promise": "10.15.2",
    "ramda": "0.28.0",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "~3.2.0",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.2.3",
    "@types/node": "*",
    "@types/sinon": "*",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "2.1260.0",
    "esbuild": "*",
    "eslint": "~8.35.0",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "json-schema-to-typescript": "^11.0.2",
    "parallelshell": "3.0.2",
    "sinon": "*",
    "ts-jest": "^29.0.3",
    "typescript": "*"
  },
  "externals": [
    "aws-sdk"
  ]
}
