{
  "name": "sse-sea-state-estimate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "prebuild": "json2ts -i src/schemas/ -o src/generated/",
    "build": "npm run prebuild && heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=lib/lambda --external:aws-sdk --target=node22",
    "cdk": "npx cdk@latest",
    "cdk-deploy-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-diff-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node22",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "pretest": "json2ts -i src/schemas/ -o lib/generated/",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2025.11.11-1",
    "aws-cdk-lib": "2.234.0",
    "constructs": "10.4.4",
    "pg-native": "3.5.2",
    "pg-promise": "12.3.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "30.2.0",
    "@rushstack/heft": "1.1.7",
    "@rushstack/heft-jest-plugin": "1.1.7",
    "@types/aws-lambda": "8.10.159",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "22.19.3",
    "@types/sinon": "21.0.0",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.27.2",
    "json-schema-to-typescript": "15.0.4",
    "parallelshell": "3.0.2",
    "sinon": "21.0.1",
    "typescript": "5.9.3"
  }
}
