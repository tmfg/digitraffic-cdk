{
  "name": "sse-sea-state-estimate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "prebuild": "json2ts -i lib/schemas/ -o lib/generated/",
    "build": "npm run prebuild && tsc && npm run postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node20",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node20",
    "cdk": "npx cdk@latest",
    "cdk-deploy-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy",
    "cdk-deploy-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-diff-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-diff-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out lib/generated",
    "clean:force": "rimraf dist cdk.out lib/generated node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "pretest": "json2ts -i lib/schemas/ -o lib/generated/",
    "test": "jest --detectOpenHandles --forceExit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.12.15-1",
    "@middy/core": "^5.2.1",
    "aws-cdk-lib": "~2.118.0",
    "constructs": "10.3.0",
    "dtsgenerator": "^3.19.1",
    "moment": "^2.30.1",
    "moment-timezone": "0.5.44",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.5.4"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.5.1",
    "@types/aws-lambda": "8.10.131",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.7",
    "@types/sinon": "17.0.2",
    "@types/xml2js": "0.4.14",
    "aws-sdk": "~2.1531.0",
    "esbuild": "0.19.11",
    "eslint": "~8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "json-schema-to-typescript": "^13.1.1",
    "parallelshell": "3.0.2",
    "sinon": "17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
