{
  "name": "sse-sea-state-estimate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "json2ts -i lib/schemas/ -o lib/generated/",
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node14",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node14",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint --cache .",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "pretest": "json2ts -i lib/schemas/ -o lib/generated/",
    "test": "jest --detectOpenHandles --forceExit --coverage --coverageDirectory=output/coverage/jest",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "cdk-diff-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff",
    "cdk-diff-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff",
    "cdk-deploy-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy",
    "cdk-deploy-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy"
  },
  "devDependencies": {
    "@types/aws-lambda": "*",
    "@types/jest": "^26.0.22",
    "@types/node": "*",
    "@types/sinon": "*",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "*",
    "esbuild": "*",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "json-schema-to-typescript": "^10.1.4",
    "parallelshell": "3.0.1",
    "sinon": "*",
    "ts-jest": "^27.0.4",
    "typescript": "*"
  },
  "dependencies": {
    "@digitraffic/common": "2022.10.6-1",
    "@middy/core": "^1.2.0",
    "@types/ramda": "0.27.44",
    "aws-cdk-lib": "*",
    "constructs": "*",
    "dtsgenerator": "^3.3.1",
    "moment": "*",
    "moment-timezone": "*",
    "pg-native": "*",
    "pg-promise": "*",
    "ramda": "0.27.1",
    "source-map-support": "^0.5.19"
  },
  "externals": [
    "aws-sdk"
  ]
}
