{
  "name": "marinecam",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node20",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node18",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node20",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test_errors": "npm test 2>&1 | grep 'FAIL'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.687.0",
    "@digitraffic/common": "2024.7.8-1",
    "amazon-cognito-identity-js": "6.3.12",
    "aws-cdk-lib": "^2.166.0",
    "constructs": "~10.4.2",
    "p-limit": "^6.1.0",
    "pg-native": "^3.2.0",
    "pg-promise": "^11.10.1",
    "undici": "^6.20.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.7.1",
    "@rushstack/heft": "^0.68.6",
    "@rushstack/heft-jest-plugin": "^0.12.18",
    "@types/aws-lambda": "8.10.145",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.6",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.24.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "parallelshell": "^3.0.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  }
}
