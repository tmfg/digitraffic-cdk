{
  "name": "marinecam",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node12",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node12",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint lib/**/*.ts test/**/*.ts --fix",
    "test": "jest --detectOpenHandles",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@aws-cdk/assert": "*",
    "@aws-cdk/aws-ec2": "*",
    "@types/aws-lambda": "*",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.27",
    "@types/sinon": "^10.0.0",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "esbuild": "^0.8.36",
    "eslint": "^7.13.0",
    "jest": "^27.0.6",
    "parallelshell": "3.0.1",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "*",
    "@aws-cdk/aws-cognito": "*",
    "@aws-cdk/aws-events": "*",
    "@aws-cdk/aws-events-targets": "*",
    "@aws-cdk/aws-iam": "*",
    "@aws-cdk/aws-lambda": "*",
    "@aws-cdk/aws-s3": "*",
    "@aws-cdk/aws-secretsmanager": "*",
    "@aws-cdk/core": "*",
    "amazon-cognito-identity-js": "^4.6.0",
    "aws-sdk": "*",
    "axios": "^0.21.1",
    "pg-native": "*",
    "pg-promise": "*",
    "xml2js": "^0.4.23"
  },
  "externals": [
    "aws-sdk"
  ]
}
