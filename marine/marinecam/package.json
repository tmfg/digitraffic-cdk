{
  "name": "marinecam",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild lib/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node16",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles --forceExit",
    "test_errors": "npm test 2>&1 | grep 'FAIL'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.6.27-1",
    "amazon-cognito-identity-js": "6.3.6",
    "aws-cdk-lib": "~2.103.1",
    "aws-sdk": "~2.1482.0",
    "axios": "^1.6.0",
    "axios-retry": "^3.8.1",
    "constructs": "10.3.0",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.5.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.4.1",
    "@types/aws-lambda": "8.10.125",
    "@types/jest": "29.5.6",
    "@types/node": "20.8.9",
    "@types/sinon": "10.0.20",
    "@types/xml2js": "0.4.13",
    "esbuild": "0.19.5",
    "eslint": "~8.52.0",
    "jest": "^29.7.0",
    "parallelshell": "3.0.2",
    "sinon": "17.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "externals": [
    "aws-sdk"
  ]
}
