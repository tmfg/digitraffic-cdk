{
  "name": "voyage-plan-gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "build:bundle": "npm run compile-lambdas",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node20",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node20",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.687.0",
    "@aws-sdk/client-sqs": "^3.687.0",
    "@aws-sdk/client-s3": "^3.687.0",
    "@digitraffic/common": "2024.10.25-1",
    "@turf/turf": "7.0.0-alpha.111",
    "aws-cdk-lib": "^2.166.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "~10.4.2",
    "date-fns": "~4.1.0",
    "@date-fns/tz": "1.2.0",
    "source-map-support": "^0.5.21",
    "uuid": "^10.0.0",
    "xml2js": "^0.6.2",
    "ky": "1.7.2"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@rushstack/eslint-config": "^3.7.1",
    "@rushstack/heft": "^0.68.6",
    "@rushstack/heft-jest-plugin": "^0.12.18",
    "@types/aws-lambda": "8.10.145",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.6",
    "@types/openlayers": "4.6.23",
    "@types/uuid": "10.0.0",
    "@types/xml2js": "0.4.14",
    "aws-lambda": "^1.0.7",
    "esbuild": "0.24.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "^3.0.2",
    "ts-jest": "^29.2.5",
    "typescript": "~5.6.3"
  }
}
