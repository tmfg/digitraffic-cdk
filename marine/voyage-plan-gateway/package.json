{
  "name": "voyage-plan-gateway",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node12",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node12",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint lib/**/*.ts test/**/*.ts --fix",
    "test": "jest",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@aws-cdk/assert": "*",
    "@types/aws-lambda": "*",
    "@types/crypto-js": "^4.0.1",
    "@types/jest": "^26.0.22",
    "@types/jsts": "^0.17.5",
    "@types/node": "^14.14.27",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "esbuild": "^0.8.36",
    "eslint": "^7.13.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.0.0",
    "parallelshell": "3.0.1",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "*",
    "@aws-cdk/aws-certificatemanager": "*",
    "@aws-cdk/aws-cloudwatch-actions": "*",
    "@aws-cdk/aws-ec2": "*",
    "@aws-cdk/aws-events-targets": "*",
    "@aws-cdk/aws-lambda": "*",
    "@aws-cdk/aws-lambda-event-sources": "*",
    "@aws-cdk/aws-secretsmanager": "*",
    "@aws-cdk/aws-sns": "*",
    "@aws-cdk/aws-sns-subscriptions": "*",
    "@aws-cdk/aws-sqs": "*",
    "@aws-cdk/core": "*",
    "@types/openlayers": "^4.6.17",
    "aws-sdk": "*",
    "axios": "^0.21.1",
    "crypto-js": "^4.0.0",
    "jsts": "^2.6.1",
    "moment": "*",
    "moment-timezone": "*",
    "ramda": "0.27.1",
    "source-map-support": "^0.5.19"
  },
  "externals": [
    "aws-sdk"
  ],
  "workspaces": {
    "nohoist": [
      "jsts",
      "@types/jsts",
      "@types/openlayers"
    ]
  }
}
