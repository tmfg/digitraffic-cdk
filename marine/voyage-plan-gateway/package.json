{
  "name": "voyage-plan-gateway",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node14",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node14",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint --cache .",
    "eslint-report": "eslint . --format html -o report.html",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "test": "jest",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.108",
    "@types/crypto-js": "^4.0.1",
    "@types/jest": "^29.2.3",
    "@types/jsts": "^0.17.5",
    "@types/node": "*",
    "@types/sinon": "*",
    "esbuild": "^0.15.14",
    "jest": "^29.3.1",
    "jest-junit": "^14.0.1",
    "parallelshell": "3.0.2",
    "sinon": "*",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "@digitraffic/common": "2022.10.6-1",
    "@types/openlayers": "^4.6.17",
    "aws-cdk-lib": "2.50.0",
    "aws-sdk": "2.1254.0",
    "axios": "^1.1.3",
    "constructs": "10.1.160",
    "crypto-js": "^4.0.0",
    "jsts": "2.9.3",
    "moment": "*",
    "moment-timezone": "0.5.39",
    "ramda": "0.28.0",
    "source-map-support": "^0.5.19"
  },
  "externals": [
    "aws-sdk"
  ],
  "workspaces": {
    "nohoist": [
      "jsts",
      "@types/jsts",
      "@types/openlayers"
    ]
  }
}
