{
  "name": "voyage-plan-gateway",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --log-level=error --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "aws-cdk-lib": "~2.85.0",
    "aws-sdk": "~2.1405.0",
    "axios": "^1.3.6",
    "constructs": "10.2.61",
    "crypto-js": "^4.1.1",
    "jsts": "2.7.2",
    "moment": "^2.29.4",
    "moment-timezone": "0.5.43",
    "ramda": "~0.29.0",
    "source-map-support": "^0.5.21",
    "xml2js": "^0.6.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.3.2",
    "@types/aws-lambda": "~8.10.119",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.5.2",
    "@types/jsts": "^0.17.5",
    "@types/node": "18.15.13",
    "@types/openlayers": "^4.6.19",
    "@types/sinon": "10.0.15",
    "@types/xml2js": "^0.4.11",
    "esbuild": "0.18.10",
    "eslint": "~8.43.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "sinon": "15.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "externals": [
    "aws-sdk"
  ]
}
