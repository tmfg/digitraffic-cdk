{
  "name": "shiplight",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint --cache .",
    "eslint-report": "eslint . --format html -o report.html",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "test": "jest --detectOpenHandles --forceExit --coverage --coverageDirectory=output/coverage/jest",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.2.3",
    "@types/node": "*",
    "@types/sinon": "*",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "2.1260.0",
    "esbuild": "*",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "parallelshell": "3.0.2",
    "sinon": "*",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "@types/ramda": "0.28.20",
    "aws-cdk-lib": "2.51.1",
    "axios": "^1.2.0",
    "constructs": "10.1.168",
    "moment": "*",
    "moment-timezone": "0.5.39",
    "pg-native": "*",
    "pg-promise": "10.15.2",
    "ramda": "0.28.0",
    "source-map-support": "^0.5.19",
    "spex": "^3.2.0",
    "uuid": "^9.0.0"
  }
}
