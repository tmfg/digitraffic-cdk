{
  "name": "shiplight",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "pnpm dlx cdk",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles --forceExit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.6.27-1",
    "aws-cdk-lib": "~2.103.1",
    "axios": "^1.6.0",
    "constructs": "10.3.0",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.5.4",
    "ramda": "~0.29.1",
    "source-map-support": "^0.5.21",
    "spex": "^3.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.4.1",
    "@types/aws-lambda": "8.10.125",
    "@types/jest": "29.5.6",
    "@types/node": "20.8.9",
    "@types/ramda": "0.29.7",
    "@types/sinon": "10.0.20",
    "@types/xml2js": "0.4.13",
    "aws-sdk": "~2.1482.0",
    "esbuild": "0.19.5",
    "eslint": "~8.52.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "sinon": "17.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  }
}
