{
  "name": "shiplight",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node20",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node18",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node20",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean"
  },
  "dependencies": {
    "@digitraffic/common": "2024.1.24-3",
    "aws-cdk-lib": "~2.118.0",
    "axios": "^1.6.5",
    "constructs": "10.3.0",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.5.4",
    "source-map-support": "^0.5.21",
    "spex": "^3.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "29.7.0",
    "@rushstack/eslint-config": "^3.6.1",
    "@rushstack/heft": "^0.64.2",
    "@rushstack/heft-jest-plugin": "^0.11.2",
    "@types/aws-lambda": "8.10.131",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.7",
    "@types/xml2js": "0.4.14",
    "aws-sdk": "~2.1531.0",
    "esbuild": "0.19.11",
    "eslint": "~8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
