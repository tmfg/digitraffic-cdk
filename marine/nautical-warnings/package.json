{
  "name": "nautical-warnings",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-deploy-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy NauticalWarningsProd",
    "cdk-deploy-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy NauticalWarningsTest",
    "cdk-diff-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff NauticalWarningsProd",
    "cdk-diff-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff NauticalWarningsTest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild lib/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node16",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "rushx test-at-helsinki && rushx test-at-utc",
    "test-at-helsinki": "TZ='Europe/Helsinki' jest --detectOpenHandles --forceExit  --coverage=false",
    "test-at-local": "jest --detectOpenHandles --forceExit",
    "test-at-utc": "TZ='TZ=UTC' jest --detectOpenHandles --forceExit",
    "test_errors": "TZ=UTC npm test 2>&1 | grep 'FAIL'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.6.27-1",
    "aws-cdk-lib": "~2.85.0",
    "axios": "^1.3.6",
    "axios-retry": "^3.5.1",
    "constructs": "10.2.61",
    "date-fns": "~2.30.0",
    "date-fns-tz": "2.0.0",
    "geojson": "^0.5.0",
    "geojson-validation": "^1.0.2",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.4.3"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.3.2",
    "@types/aws-lambda": "~8.10.119",
    "@types/geojson": "^7946.0.10",
    "@types/jest": "^29.5.2",
    "@types/node": "18.15.13",
    "@types/ramda": "~0.29.0",
    "@types/sinon": "10.0.15",
    "@types/xml2js": "^0.4.11",
    "aws-sdk": "~2.1405.0",
    "esbuild": "0.18.10",
    "eslint": "~8.43.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "sinon": "15.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  }
}
