{
  "name": "nautical-warnings",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node20",
    "cdk": "npx cdk@latest",
    "cdk-deploy-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod deploy NauticalWarningsProd",
    "cdk-deploy-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test deploy NauticalWarningsTest",
    "cdk-diff-marine-prod": "../../scripts/cdk-diff-and-deploy.sh marine-prod diff NauticalWarningsProd",
    "cdk-diff-marine-test": "../../scripts/cdk-diff-and-deploy.sh marine-test diff NauticalWarningsTest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node18",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node20",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "rushx test-at-helsinki && rushx test-at-utc",
    "test-at-helsinki": "TZ='Europe/Helsinki' NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test-at-local": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test-at-utc": "TZ='TZ=UTC' NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test_errors": "TZ=UTC npm test 2>&1 | grep 'FAIL'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2024.6.26-2",
    "aws-cdk-lib": "~2.147.1",
    "constructs": "10.3.0",
    "date-fns": "~3.6.0",
    "date-fns-tz": "~3.1.3",
    "geojson": "^0.5.0",
    "geojson-validation": "^1.0.2",
    "ky": "^1.3.0",
    "pg-native": "^3.1.0",
    "pg-promise": "^11.8.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "29.7.0",
    "@rushstack/eslint-config": "^3.7.0",
    "@rushstack/heft": "^0.66.18",
    "@rushstack/heft-jest-plugin": "^0.12.0",
    "@types/aws-lambda": "8.10.140",
    "@types/geojson": "^7946.0.13",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.8",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.21.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "3.0.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2"
  }
}
