{
  "name": "rail-rata-cdk",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node22",
    "cdk": "npx cdk@latest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "echo 'No tests implemented'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2025.11.11-1",
    "aws-cdk-lib": "^2.225.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.4.3"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/heft": "^1.1.5",
    "@rushstack/heft-jest-plugin": "^1.1.5",
    "@types/aws-lambda": "8.10.158",
    "@types/heft-jest": "1.0.6",
    "@types/node": "^22.19.1",
    "esbuild": "0.27.0",
    "jest": "^30.2.0",
    "typescript": "~5.9.3"
  },
  "externals": [
    "aws-sdk"
  ]
}
