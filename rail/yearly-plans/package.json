{
  "name": "yearly-plans",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run build:bundle",
    "build:bundle": "npm run compile-lambdas",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "cdk": "cdk",
    "compile-lambdas": "node lib/esbuild.js",
    "compile-lambdas-old": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda/update-plans --target=node22,es2022",
    "convert-schema": "node src/scripts/schema-fix.mjs",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft test-watch --clean"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.975.0",
    "@digitraffic/common": "2026.2.5-1",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "archiver": "7.0.1",
    "aws-cdk-lib": "2.236.0",
    "constructs": "10.4.5",
    "ky": "1.14.3"
  },
  "devDependencies": {
    "@digitraffic-cdk/cdk-rig": "workspace:*",
    "@digitraffic-cdk/esbuild": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "30.2.0",
    "@rushstack/heft": "1.1.10",
    "@rushstack/heft-jest-plugin": "1.1.10",
    "@types/archiver": "7.0.0",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "25.0.10",
    "aws-cdk": "2.1103.0",
    "esbuild": "0.27.2",
    "typescript": "5.9.3"
  }
}
