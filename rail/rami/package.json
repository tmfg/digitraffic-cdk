{
  "name": "rami",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node src/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --format=esm --target=es2022 --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node16",
    "compile-lambdas": "rushx rollup",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "lint": "eslint --cache .",
    "rollup": "rollup -c",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean --max-workers 1",
    "test_errors": "npm test 2>&1 | grep 'FAIL'",
    "watch": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean --watch --max-workers 1"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "~3.348.0",
    "@digitraffic/common": "2023.6.19-1",
    "@middy/core": "^4.3.1",
    "@middy/sqs-partial-batch-failure": "^4.3.1",
    "aws-cdk-lib": "~2.76.0",
    "constructs": "10.2.2",
    "date-fns": "~2.29.3",
    "date-fns-tz": "~2.0.0",
    "mysql2": "^3.0.1",
    "source-map-support": "^0.5.21",
    "spex": "^3.3.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@aws-cdk/aws-synthetics-alpha": "2.70.0-alpha.0",
    "@babel/preset-env": "~7.22.5",
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rollup/plugin-babel": "~6.0.3",
    "@rollup/plugin-commonjs": "~25.0.0",
    "@rollup/plugin-json": "~6.0.0",
    "@rollup/plugin-node-resolve": "~15.1.0",
    "@rollup/plugin-terser": "~0.4.3",
    "@rollup/plugin-typescript": "~11.1.1",
    "@rushstack/eslint-config": "^3.2.0",
    "@rushstack/heft": "^0.50.0",
    "@rushstack/heft-jest-plugin": "^0.5.6",
    "@types/aws-lambda": "~8.10.114",
    "@types/heft-jest": "~1.0.3",
    "@types/jest": "^29.5.1",
    "@types/node": "18.15.13",
    "eslint": "~8.38.0",
    "parallelshell": "3.0.2",
    "rollup": "~3.25.1",
    "typescript": "~4.9.5"
  }
}
