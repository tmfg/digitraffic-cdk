{
  "name": "rami",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run build:bundle",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries",
    "build:watch": "heft build-watch --clean",
    "cdk": "cdk",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild src/canaries/*.ts --log-level=warning --bundle --target=node22 --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics",
    "compile-lambdas": "node lib/esbuild.js",
    "compile-lambdas-old": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --format=esm --target=node22 --outdir=dist/lambda --out-extension:.js=.mjs --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean --max-workers 1",
    "test_errors": "npm test 2>&1 | grep 'FAIL'",
    "watch": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean --watch --max-workers 1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.975.0",
    "@aws-sdk/client-secrets-manager": "3.975.0",
    "@aws-sdk/client-sqs": "3.975.0",
    "@date-fns/tz": "1.4.1",
    "@digitraffic/common": "2026.2.10-1",
    "@middy/core": "7.0.2",
    "@middy/sqs-partial-batch-failure": "7.0.2",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "aws-cdk-lib": "2.236.0",
    "constructs": "10.4.5",
    "date-fns": "4.1.0",
    "mysql2": "3.16.2",
    "source-map-support": "0.5.21",
    "spex": "4.1.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@digitraffic-cdk/cdk-rig": "workspace:*",
    "@digitraffic-cdk/esbuild": "workspace:*",
    "@digitraffic-cdk/testing": "workspace: *",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/heft": "1.1.10",
    "@rushstack/heft-jest-plugin": "1.1.10",
    "@types/aws-lambda": "8.10.160",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/lodash-es": "4.17.12",
    "@types/node": "25.0.10",
    "aws-cdk": "2.1103.0",
    "esbuild": "0.27.2",
    "lodash-es": "4.17.23",
    "parallelshell": "3.0.2",
    "typescript": "5.9.3"
  }
}
