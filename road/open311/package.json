{
  "name": "open311-cdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "heft build --clean && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node22",
    "cdk": "npx cdk@latest",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --target=node22",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean"
  },
  "dependencies": {
    "@digitraffic/common": "2025.11.11-1",
    "aws-cdk-lib": "^2.233.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.4.4",
    "ky": "^1.14.1",
    "pg-native": "^3.5.2",
    "pg-promise": "^12.3.0",
    "source-map-support": "^0.5.21",
    "spex": "^4.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/testing": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "^30.2.0",
    "@rushstack/heft": "^1.1.7",
    "@rushstack/heft-jest-plugin": "^1.1.7",
    "@types/aws-lambda": "8.10.159",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "^22.19.1",
    "@types/sinon": "21.0.0",
    "@types/source-map-support": "^0.5.10",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.27.2",
    "parallelshell": "^3.0.2",
    "querystring": "0.2.1",
    "typescript": "~5.9.3"
  }
}
