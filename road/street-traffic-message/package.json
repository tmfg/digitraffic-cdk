{
  "name": "street-traffic-messages",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas && npm run compile-canaries",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "esbuild lib/canaries/*.ts --log-level=warning --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node16",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --minify --outdir=dist/lambda --external:aws-sdk --target=node16",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --runInBand --detectOpenHandles",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "aws-cdk-lib": "~2.76.0",
    "axios": "^1.3.6",
    "constructs": "10.2.2",
    "moment": "^2.29.4",
    "pg-promise": "^11.4.3",
    "wkx": "^0.5.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.2.0",
    "@types/aws-lambda": "~8.10.114",
    "@types/geojson": "^7946.0.10",
    "@types/jest": "^29.5.1",
    "@types/node": "18.15.13",
    "@types/sinon": "10.0.14",
    "@types/xml2js": "^0.4.11",
    "esbuild": "0.17.17",
    "eslint": "~8.38.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "sinon": "15.0.4",
    "ts-jest": "^29.1.0",
    "typescript": "~4.9.5"
  },
  "externals": [
    "aws-sdk"
  ]
}
