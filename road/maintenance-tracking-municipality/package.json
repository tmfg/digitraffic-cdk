{
  "name": "maintenance-tracking-municipality",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"pnpm run watch\" \"pnpm run bundle-watch\"",
    "build": "tsc && pnpm postbuild",
    "postbuild": "pnpm run compile-lambdas && pnpm run compile-canaries",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff",
    "cdk-synth-road-prod": "cdk synth MaintenanceTrackingMunicipalityRoadProd --no-staging > template-road-prod.yaml",
    "cdk-synth-road-test": "cdk synth MaintenanceTrackingMunicipalityRoadTest --no-staging > template-road-test.yaml",
    "ci:eslint-report": "eslint . --format html -o report.html",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-canaries": "../../scripts/check-ts-files-exists-and-run.sh 'lib/canaries' 'esbuild lib/canaries/*.ts --bundle --platform=node --outdir=dist/nodejs/node_modules --external:aws-sdk --external:Synthetics --target=node16'",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles --forceExit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2022.12.22-3",
    "aws-cdk-lib": "2.59.0",
    "axios": "^1.3.1",
    "constructs": "10.1.168",
    "geojson": "^0.5.0",
    "moment": "*",
    "pg-native": "*",
    "pg-promise": "10.15.2",
    "source-map-support": "*",
    "spex": "^3.2.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@types/aws-lambda": "8.10.108",
    "@types/geojson": "^7946.0.10",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "*",
    "@types/sinon": "*",
    "esbuild": "*",
    "jest": "^29.4.1",
    "jest-junit": "^15.0.0",
    "lodash": "^4.17.21",
    "maintenance-tracking": "workspace:maintenance-tracking@*",
    "parallelshell": "3.0.2",
    "sinon": "*",
    "ts-jest": "^29.0.5",
    "typescript": "*"
  },
  "externals": [
    "aws-sdk"
  ]
}
