{
  "name": "lam-history",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "heft build --clean && npm run build:bundle",
    "build:bundle": "npm run compile-lambdas && npm run compile-canaries && npm run generate-translations",
    "build:tsc": "heft build --clean",
    "build:watch": "heft build-watch --clean",
    "bundle-watch": "find src/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --format=esm --platform=node src/lambda/**/*.ts --outdir=dist/lambda --target=node22,es2022",
    "cdk": "npx cdk@latest",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy LamHistoryProd",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy LamHistoryTest",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff LamHistoryProd",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff LamHistoryTest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "compile-canaries": "echo 'No canaries'",
    "compile-canaries_": "esbuild src/canaries/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/nodejs/node_modules --external:Synthetics --target=node22,es2020",
    "compile-lambdas": "esbuild src/lambda/**/*.ts --log-level=warning --bundle --format=esm --platform=node --outdir=dist/lambda --target=node22,es2022  --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" --out-extension:.js=.mjs",
    "generate-translations": "npm run generate-fi-index && npm run generate-fi-js && npm run generate-en-index && npm run generate-en-js",
    "generate-fi-index": "ejs src/web/index.template.html -f src/web/translation.fi.json -o ./src/website/index.html",
    "generate-fi-js": "ejs src/web/scripts.template.js -f src/web/translation.fi.json -o ./src/website/scripts.js",
    "generate-en-index": "ejs src/web/index.template.html -f src/web/translation.en.json -o ./src/website/index_en.html",
    "generate-en-js": "ejs src/web/scripts.template.js -f src/web/translation.en.json -o ./src/website/scripts_en.js",
    "test": "echo 'No tests'",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' heft-watch test --clean",
    "test_": "NODE_OPTIONS='--experimental-vm-modules' heft test --clean && npm run build:bundle"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "@digitraffic/common": "2025.9.10-1",
    "aws-cdk-lib": "^2.211.0",
    "constructs": "~10.4.2",
    "ejs": "3.1.10",
    "ky": "^1.8.2"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@jest/globals": "^30.0.5",
    "@rushstack/eslint-config": "^3.7.1",
    "@rushstack/heft": "^0.74.2",
    "@rushstack/heft-jest-plugin": "^0.16.11",
    "@types/aws-lambda": "8.10.152",
    "@types/heft-jest": "1.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "22.15.2",
    "esbuild": "0.25.9",
    "eslint": "^8.57.0",
    "typescript": "~5.8.3"
  }
}
