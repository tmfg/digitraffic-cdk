{
  "name": "lam-history",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "npm run compile-lambdas",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node20",
    "cdk": "cdk",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy LamHistoryProd",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy LamHistoryTest",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff LamHistoryProd",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff LamHistoryTest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "compile-lambdas": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node20",
    "link-common": "rm -rf node_modules/@digitraffic && mkdir -p node_modules/@digitraffic && ln -s ../../../../../digitraffic-common-private/ node_modules/@digitraffic/common",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "echo 'No tests'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2024.1.30-1",
    "aws-cdk-lib": "~2.118.0",
    "aws-sdk": "~2.1531.0",
    "axios": "^1.6.5",
    "constructs": "10.3.0"
  },
  "devDependencies": {
    "@aws-cdk/assert": "2.68.0",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.5.1",
    "@types/aws-lambda": "8.10.131",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.7",
    "@types/sinon": "17.0.2",
    "@types/xml2js": "0.4.14",
    "esbuild": "0.19.11",
    "eslint": "~8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "sinon": "17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
