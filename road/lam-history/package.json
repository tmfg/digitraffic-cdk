{
  "name": "lam-history",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"pnpm run watch\" \"pnpm run bundle-watch\"",
    "build": "tsc && pnpm postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy LamHistoryProd",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy LamHistoryTest",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff LamHistoryProd",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff LamHistoryTest",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles --forceExit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2023.2.13-1",
    "aws-cdk-lib": "2.62.2",
    "aws-sdk": "2.1304.0",
    "axios": "^1.2.0",
    "constructs": "10.1.235"
  },
  "devDependencies": {
    "@aws-cdk/assert": "2.62.2",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "~3.2.0",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@types/sinon": "^10.0.13",
    "@types/xml2js": "^0.4.11",
    "esbuild": "^0.17.9",
    "eslint": "~8.34.0",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "sinon": "^15.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "~4.8.4"
  }
}
