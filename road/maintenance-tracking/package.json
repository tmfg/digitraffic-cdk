{
  "name": "maintenance-tracking",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "build": "tsc && npm run postbuild",
    "postbuild": "esbuild lib/lambda/**/*.ts --log-level=warning --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node20",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node20",
    "cdk": "cdk",
    "cdk-deploy-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod deploy",
    "cdk-deploy-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test deploy",
    "cdk-diff-road-prod": "../../scripts/cdk-diff-and-deploy.sh road-prod diff",
    "cdk-diff-road-test": "../../scripts/cdk-diff-and-deploy.sh road-test diff",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "eslint-report": "npm run ci:eslint-report && open report.html",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --detectOpenHandles --forceExit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2024.1.10-1",
    "@middy/core": "^5.2.1",
    "@middy/sqs-partial-batch-failure": "^5.2.1",
    "aws-cdk-lib": "~2.118.0",
    "aws-sdk": "~2.1531.0",
    "constructs": "10.3.0",
    "date-fns": "~2.30.0",
    "dtsgenerator": "^3.19.1",
    "lodash": "~4.17.21",
    "pg-native": "^3.0.1",
    "pg-promise": "^11.5.4",
    "sns-sqs-big-payload": "^0.1.4",
    "source-map-support": "^0.5.21",
    "spex": "^3.3.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.5.1",
    "@types/aws-lambda": "8.10.131",
    "@types/jest": "29.5.11",
    "@types/lodash": "4.14.202",
    "@types/node": "20.10.7",
    "@types/sinon": "17.0.2",
    "esbuild": "0.19.11",
    "eslint": "~8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parallelshell": "^3.0.2",
    "sinon": "17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
