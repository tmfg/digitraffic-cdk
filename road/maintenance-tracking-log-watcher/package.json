{
  "name": "maintenance-tracking-watch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "all-watch": "parallelshell \"pnpm run watch\" \"pnpm run bundle-watch\"",
    "build": "tsc && pnpm postbuild",
    "postbuild": "esbuild lib/lambda/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node16",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc pnpm dlx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node16",
    "cdk": "cdk",
    "cdk-deploy-status-test": "../../scripts/cdk-diff-and-deploy.sh status-test deploy",
    "cdk-diff-status-test": "../../scripts/cdk-diff-and-deploy.sh status-test diff",
    "cdk-synth-status-test": "cdk synth MaintenanceTrackingLogWatcherTest --no-staging > template-status-test.yaml",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "eslint-report": "eslint . --format html -o report.html",
    "lint": "eslint --cache .",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "test": "jest --runInBand --detectOpenHandles",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@digitraffic/common": "2022.11.23-5",
    "@types/node-fetch": "^2.5.7",
    "aws-cdk-lib": "2.51.1",
    "constructs": "10.1.168",
    "moment": "*",
    "moment-timezone": "0.5.39",
    "source-map-support": "^0.5.19",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "^29.2.3",
    "@types/node": "*",
    "@types/sinon": "*",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "2.1260.0",
    "esbuild": "^0.15.15",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "node-fetch": "^3.3.0",
    "parallelshell": "3.0.2",
    "sinon": "^14.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "externals": [
    "aws-sdk"
  ]
}
