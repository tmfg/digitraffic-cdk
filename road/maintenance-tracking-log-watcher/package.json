{
  "name": "maintenance-tracking-watch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node14",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node14",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint --cache .",
    "clean": "rimraf dist cdk.out",
    "clean:force": "rimraf dist cdk.out node_modules",
    "test": "jest --runInBand --detectOpenHandles",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml",
    "cdk-diff-status-test": "../../scripts/cdk-diff-and-deploy.sh status-test diff",
    "cdk-deploy-status-test": "../../scripts/cdk-diff-and-deploy.sh status-test deploy",
    "cdk-synth-status-test": "cdk synth MaintenanceTrackingLogWatcherTest --no-staging > template-status-test.yaml"
  },
  "devDependencies": {
    "@types/aws-lambda": "*",
    "@types/jest": "^26.0.22",
    "@types/node": "*",
    "@types/sinon": "*",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "*",
    "esbuild": "^0.8.36",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "node-fetch": "^2.6.1",
    "parallelshell": "3.0.1",
    "sinon": "^14.0.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "*"
  },
  "dependencies": {
    "@digitraffic/common": "2022.10.6-1",
    "@types/node-fetch": "^2.5.7",
    "aws-cdk-lib": "*",
    "constructs": "*",
    "moment": "*",
    "moment-timezone": "*",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.1"
  },
  "externals": [
    "aws-sdk"
  ]
}
