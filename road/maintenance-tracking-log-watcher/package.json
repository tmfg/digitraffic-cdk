{
  "name": "maintenance-tracking-watch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "esbuild lib/lambda/*.ts --bundle --platform=node --outdir=dist/lambda --external:aws-sdk --target=node12",
    "watch": "tsc -w",
    "bundle-watch": "find lib/lambda -name '*.ts' | entr -rc npx esbuild  --bundle --platform=node lib/lambda/**/*.ts --outdir=dist/lambda --external:aws-sdk --target=node12",
    "all-watch": "parallelshell \"npm run watch\" \"npm run bundle-watch\"",
    "lint": "eslint lib/**/*.ts test/**/*.ts --fix",
    "test": "jest --runInBand --detectOpenHandles",
    "cdk": "cdk",
    "synth-sam": "cdk synth --no-staging > template.yaml"
  },
  "devDependencies": {
    "@types/aws-lambda": "*",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.27",
    "@types/sinon": "^10.0.0",
    "@types/xml2js": "^0.4.8",
    "aws-sdk": "*",
    "esbuild": "^0.8.36",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "node-fetch": "^2.6.1",
    "parallelshell": "3.0.1",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-events": "*",
    "@aws-cdk/aws-events-targets": "*",
    "@aws-cdk/aws-iam": "*",
    "@aws-cdk/aws-s3": "*",
    "@aws-cdk/aws-sns": "*",
    "@aws-cdk/aws-sns-subscriptions": "*",
    "@aws-cdk/core": "*",
    "@types/node-fetch": "^2.5.7",
    "moment": "*",
    "moment-timezone": "*",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.1"
  },
  "externals": [
    "aws-sdk"
  ]
}
