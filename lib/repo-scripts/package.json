{
  "name": "@digitraffic-cdk/repo-scripts",
  "version": "1.0.0",
  "scripts": {
    "build": "heft build --clean",
    "build:bundle": "npm run build && npm run bundle",
    "bundle": "esbuild --bundle src/cli/*.ts --outdir=dist/cli --platform=node --target=node18 --format=cjs",
    "ci:eslint-report": "eslint . --format html -o report.html || true",
    "test": "heft test --clean"
  },
  "dependencies": {
    "chalk": "~5.3.0",
    "fs-extra": "~11.1.1",
    "globby": "~13.2.2",
    "lodash": "~4.17.21",
    "zx": "~7.2.3"
  },
  "devDependencies": {
    "@digitraffic-cdk/digitraffic-cdk-rig": "workspace:*",
    "@digitraffic-cdk/eslint-config": "workspace:*",
    "@digitraffic-cdk/toolchain": "workspace:*",
    "@rushstack/eslint-config": "^3.2.0",
    "@rushstack/heft": "^0.50.0",
    "@rushstack/heft-jest-plugin": "^0.5.6",
    "@types/fs-extra": "~11.0.1",
    "@types/heft-jest": "~1.0.3",
    "@types/jest": "^29.5.1",
    "@types/lodash": "~4.14.197",
    "@types/node": "18.15.13",
    "esbuild": "0.19.2",
    "eslint": "~8.38.0",
    "typescript": "~4.9.5"
  }
}
